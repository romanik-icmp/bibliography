@InProceedings{KozitskyKozlovskiiDobush2018book,
	author={Kozitsky, Yuri and Kozlovskii, Mykhailo and Dobush, Oksana},
	editor={Bulavin, Leonid A. and Chalyi, Alexander V.},
	title={Phase Transitions in a Continuum Curie-Weiss System: A Quantitative Analysis},
	booktitle={Modern Problems of Molecular Physics},
