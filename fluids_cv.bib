@article{Yukh1990,
	title = {The functional of the grand partition function for the investigation of the liquid-gas critical point},
	journal = {Physica A: Statistical Mechanics and its Applications},
	volume = {168},
	number = {3},
	pages = {999-1020},
	year = {1990},
	issn = {0378-4371},
	doi = {https://doi.org/10.1016/0378-4371(90)90268-W},
	url = {https://www.sciencedirect.com/science/article/pii/037843719090268W},
	author = {I.R. Yukhnovskii},
	abstract = {An approach for the description of a spatially homogeneous system of interacting particles in the vicinity of the critical point is proposed. An explicit expression for the functional integral form of the partition function in the grand canonical ensemble is obtained. The functional integral is defined on a set of the collective variables (CV). The variable ϱk corresponds to the density vibration mode with the wave vector k. It is shown that in the vicinity of the critical point, for all k larger than some B, the CV are distributed with the Gaussian measure density. In the long wave region, k < B, the surfaces of the cumulants consisting of the correlation functions of some reference system (the reference system is a model system of particles with repulsive pair interactions) possess wide plateaus in the vicinity of the point k = 0. It is shown that due to these two facts the homogeneous system can be put in correspondance with a certain lattice system with spacing c = πB. The problem of the calculation of the partition function can be reduced to the calculation of the functional for a three-dimensional Ising model with an external field.}
}

